release: MAIN.ASM RAND.OBJ VIDEO.OBJ DRAWING.OBJ KEYB.OBJ INPUT.OBJ GAME.OBJ
	ML /W3 /WX RAND.OBJ VIDEO.OBJ DRAWING.OBJ KEYB.OBJ INPUT.OBJ GAME.OBJ MAIN.ASM /Fe MAIN.EXE

debug: MAIN.ASM RANDD.OBJ VIDEOD.OBJ DRAWINGD.OBJ KEYBD.OBJ INPUTD.OBJ GAMED.OBJ
	ML /Zi /W3 /WX RANDD.OBJ VIDEOD.OBJ DRAWINGD.OBJ KEYBD.OBJ INPUTD.OBJ GAMED.OBJ MAIN.ASM /Fe SNAKED.EXE

RAND.OBJ: RAND.ASM
	ML /c /W3 /WX /FoRAND.OBJ /Ta RAND.ASM
	
RANDD.OBJ: RAND.ASM
	ML /c /Zi /W3 /WX /FoRANDD.OBJ /Ta RAND.ASM
	
VIDEO.OBJ: VIDEO.ASM
	ML /c /W3 /WX /FoVIDEO.OBJ /Ta VIDEO.ASM
	
VIDEOD.OBJ: VIDEO.ASM
	ML /c /Zi /W3 /WX /FoVIDEOD.OBJ /Ta VIDEO.ASM

DRAWING.OBJ: DRAWING.ASM
	ML /c /W3 /WX /FoDRAWING.OBJ /Ta DRAWING.ASM
	
DRAWINGD.OBJ: DRAWING.ASM
	ML /c /Zi /W3 /WX /FoDRAWINGD.OBJ /Ta DRAWING.ASM
	
KEYB.OBJ: KEYB.ASM
	ML /c /W3 /WX /FoKEYB.OBJ /Ta KEYB.ASM
	
KEYBD.OBJ: KEYB.ASM
	ML /c /Zi /W3 /WX /FoKEYBD.OBJ /Ta KEYB.ASM
	
INPUT.OBJ: INPUT.ASM
	ML /c /W3 /WX /FoINPUT.OBJ /Ta INPUT.ASM
	
INPUTD.OBJ: INPUT.ASM
	ML /c /Zi /W3 /WX /FoINPUTD.OBJ /Ta INPUT.ASM

GAME.OBJ: GAME.ASM
	ML /c /W3 /WX /FoGAME.OBJ /Ta GAME.ASM
	
GAMED.OBJ: GAME.ASM
	ML /c /Zi /W3 /WX /FoGAMED.OBJ /Ta GAME.ASM

clean:
	del *.EXE
	del *.OBJ

cv: debug
	cv /s /43 SNAKED.EXE
